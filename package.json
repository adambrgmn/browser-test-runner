{
  "name": "play",
  "version": "0.0.0",
  "description": "A modern node/typescript project template",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js"
    }
  },
  "files": [
    "./lib"
  ],
  "engines": {
    "node": ">=18.x"
  },
  "keywords": [
    "typescript",
    "module",
    "eslint",
    "esm"
  ],
  "scripts": {
    "server": "npx nodemon -w dist dist/cli.js",
    "build": "tsc -b tsconfig.build.json",
    "test": "node --loader tsx --test ./lib/*.test.ts",
    "test:coverage": "c8 --check-coverage --all node --loader tsx --test ./lib/*.test.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext js,ts,mjs,tsx --ignore-path .gitignore",
    "format": "prettier . --write --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "c8": "^7.12.0",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^3.10.1",
    "typescript": "^4.8.4"
  },
  "c8": {
    "src": [
      "./lib"
    ]
  },
  "dependencies": {
    "esbuild": "^0.15.10",
    "micro": "^9.4.1"
  }
}
